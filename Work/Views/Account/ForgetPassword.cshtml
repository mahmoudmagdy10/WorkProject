@model Work.BL.Models.ForgetPasswordVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forget Password</title>
    <link href="~/assets/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/ShowPosts.css">
    <link rel="stylesheet" href="~/assets/css/InqueryReplaySpecialiest.css">
    <link rel="stylesheet" href="~/assets/css/ReplyInThePost.css">
    <link rel="stylesheet" href="~/assets/css/SharedFile.css">

</head>
<body>

    <div class="container py-5 vh-100 justify-content-center align-items-center d-flex">

        <div class="container py-4 d-flex justify-content-center align-items-center h-75">
            <div class="w-100 h-100">

                <div class="shadowBox p-4 bg-main-color w-100 m-auto text-center">

                    <form asp-controller="Account" asp-action="ForgetPassword">
                        <div class="inputes-chat-and-sendReplay text-end">
                            <div class="w-100 d-flex justify-content-center">
                                <div class="input-group my-3">
                                    <input class="btn text-white btn-Send-Replay mx-2 border-radius-32" type="submit" id="button-addonReplay" value="Send">
                                    <input type="text" class="form-control " asp-for="Email" placeholder="Enter Your Email" aria-label="Example text with button addon" aria-describedby="button-addon1" id="InputeComment">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>