@model Work.BL.Models.RegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registeration </title>
    <!-- name of website -->
    <link href="~/assets/css/all.min.css" rel="stylesheet">
    <!--calling file of fontawsome  -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <!-- calling file of css boostrap -->
    <link rel="stylesheet" href="~/assets/css/LoginAndRegister.CSS">
    <!-- calling file of style by developer -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@300&display=swap" rel="stylesheet">

</head>

<body>

    <header>

        <div class="layer vh-100 d-flex align-items-center">

            <div class="container-lg py-5">

                <form  asp-controller="Account" asp-action="Register">
                    <div class="d-flex justify-content-center align-items-start">
                        <div class="h-50 w-100 containerOfInputsSignUp">
                            <div class="container-fluid">
                                <h1 class="text-center">Sign Up</h1>
                                <div class="row py-5">

		                            <input type="hidden" asp-for="RegisterAs" value="@ViewBag.RegisterAs" />
                                    <div class="col-lg-12">
                                        <div class="input-group mb-3">
                                            <span
                                                class="input-group-text m-10 text-center justify-content-center bg-white "
                                                id="basic-addon2">Name</span>
                                            <input type="text" class="form-control" placeholder="Enter Your Name"
                                                id="EmailNameInput" asp-for="UserName" 
                                                aria-describedby="basic-addon2">
                                        </div>
		                                <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="col-lg-12 ">
                                        <div class="input-group mb-3">
                                            <span
                                                class="input-group-text m-10 text-center justify-content-center bg-white "
                                                id="basic-addon2">Email</span>
                                            <input type="email" class="form-control"
                                                placeholder="Enter Your Email Address" id="emailAdress" asp-for="Email" 
                                                aria-label="Recipient's username" aria-describedby="basic-addon2">
                                        </div>
		                                <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="input-group mb-3">
                                            <span
                                                class="input-group-text m-10 text-center justify-content-center bg-white "
                                                id="basic-addon2">Password</span>
                                            <input type="password" class="form-control" asp-for="Password"
                                                placeholder="Enter Your Password" id="PasswordElement"
                                                aria-label="Recipient's username" aria-describedby="basic-addon2">
                                        </div>
		                                <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="input-group mb-3">
                                            <span
                                                class="input-group-text m-10 text-center justify-content-center bg-white "
                                                id="basic-addon2"> Re-Password </span>
                                            <input type="password" class="form-control" asp-for="ConfirmPassword"
                                                placeholder="Enter Your Re-Password" id="Repassword"
                                                aria-label="Recipient's username" aria-describedby="basic-addon2">
                                        </div>
		                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="col-lg-11 m-auto py-5">
		                                
                                        <input class="btn text-white w-100 rounded-50 main-bg-color" type="submit" value="Create Account">

                                        <div class="bg-danger rounded-3 mt-2 pt-1 w-50 m-auto d-none"
                                            id="errorsSubmite">
                                            <p class="text-light text-center ">Must Enter Data valid</p>
                                        </div>
                                        <p class="text-center text-black my-1">Already Have an account ?<a
                                                href="Login.html" class="text-black text-decoration-none mx-2">Login</a>
                                        </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </header>

    <script src="~/assets/js/jqu.js"></script>
    <script src="~/assets/js/Register.js"></script>
</body>

</html>
