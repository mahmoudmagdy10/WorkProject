@model Work.BL.Models.ResetPasswordVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forget Password</title>
    <link href="~/assets/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/setting.css">
    <link rel="stylesheet" href="~/assets/css/SharedFile.css">

</head>
<body style="height:100%;background: #c59035;padding: 15px;margin: 100px;">

    <div class="row align-items-center" style="height:100%;background: white;padding: 15px;border-radius: 29px;">
        <div class="col-md-9">
            <div class="container content clear-fix">
                <h2 class="mt-5 mb-5">Reset Password</h2>
                <div class="row" style="height:100%">
                    <div class="col-md-12">
                        <div class="container">
                            <form asp-controller="Account" asp-action="ResetPassword" method="POST">

                                <input type="hidden" asp-for="Email" />
                                <input type="hidden" asp-for="Token" />

                                <div class="form-group">
                                    <label>New Password</label>
                                    <input type="password" class="form-control" asp-for="NewPassword">
                                </div>
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <input type="password" class="form-control" asp-for="ConfirmPassword">
                                </div>

                                <div class="row mt-5 btns-Mobile">
                                    <div class="col ">
                                        <button type="submit" class="btn btn-primary btn-block btn-radius-32">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>