
@using Microsoft.AspNetCore.Identity;
@using Work.DAL.Extend;
@inject SignInManager<ApplicationUser> signInManager


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- name of website -->
    <link href="~/assets/css/all.min.css" rel="stylesheet">
    <!--calling file of fontawsome  -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <!-- calling file of css boostrap -->
    <link rel="stylesheet" href="~/assets/css/Header.css">
    <!-- calling file of style by developer -->
    <link rel="stylesheet" href="~/assets/css/SharedFile.css">
    <!-- shared file  -->
    @RenderSection("css",required:false)

    <!-- Link Of Fonts  -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">
                  <i class="fa-solid fa-bars fa-fade" style="color: #b37a00;"></i>

                </span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                  <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Account" asp-action="Login">Home</a>
                  </li>

                  <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="HowItWork" >How it Work</a>
                  </li>

                  <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About US </a>
                  </li>

                  @if (signInManager.IsSignedIn(User))
                  {
                  <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
@*                      <p>@User.Identity.Name</p>
*@                      <img src="~/assets/images/Eich.jpg" alt="" class="ProfilePhoto">
                    </a>

                    <ul class="dropdown-menu" style="background-color: #87aaa5;">
                      <li><a class="dropdown-item" href="#">Setting</a></li>
                      <li><hr class="dropdown-divider"></li>
                      <li>
                        <form class="dropdown-item" asp-controller="Account" asp-action="Logout" class="nav-link">
                            <input type="submit" value="Log Out" class="btn btn-danger" />
                        </form>
                      </li>
                    </ul>
                  </li>
                  }

                </ul>

              </div>
            </div>
          </nav>

        <div>
            @RenderBody()
        </div>
    </header>

    <script src="~/assets/js/jqu.js"></script>
    <script src="~/assets/js/action.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    @RenderSection("js",required:false)

</body>

</html>