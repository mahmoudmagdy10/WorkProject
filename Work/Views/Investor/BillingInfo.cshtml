@using Microsoft.AspNetCore.Identity;
@using Work.DAL.Extend;

@model ApplicationUser;
@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager

@{
    ViewData["Title"] = "Profile Settings - Billing Info";
    var UserId = @userManager.GetUserId(User);
}

@section css
{
    <!-- calling file of css boostrap -->
    <link rel="stylesheet" href="~/assets/css/setting.css">
    <link rel="stylesheet" href="~/assets/css/SharedFile.css">
    <link rel="stylesheet" href="~/assets/css/payment.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
}

<div class="container-fluid main" style="height:100vh;padding-left:0px;" id="navbar-nav">
    <div class="d-block d-md-none menu">
        <i class="fa-sharp fa-solid fa-arrow-right fa-2xl"></i>

    </div>
    <div class="expand-menu nav flex-column">
        <a asp-controller="Account" asp-action="ProfileSettings" asp-route-UserId="@UserId" class="nav-link  mt-auto ">
            <i class="far fa-user-circle"></i>
            Profile
        </a>
        <a asp-controller="Account" asp-action="ChangePassword" class="nav-link">
            <i class="fa-solid fa-key fa-lg"
               style="color: #ffffff;"></i> Password
        </a>

        @if (signInManager.IsSignedIn(User) && User.IsInRole("Investor"))
        {
            <a asp-controller="Investor" asp-action="BillingInfo" class="nav-link mb-auto  active">
                <i class="far fa-file-alt"></i> Billing
                Info
            </a>
        }

    </div>
    <div class="row align-items-center" style="height:100%">

        <div class="col-md-3 d-none d-md-block" style="height:100%">

            <div class="container-fluid nav sidebar flex-column">

                <a asp-controller="Account" asp-action="ProfileSettings" asp-route-UserId="@UserId" class="nav-link  mt-auto ">
                    <i class="far fa-user-circle"></i>
                    Profile
                </a>
                <a asp-controller="Account" asp-action="ChangePassword" class="nav-link">
                    <i class="fa-solid fa-key fa-lg"
                       style="color: #ffffff;"></i> Password
                </a>

                @if (signInManager.IsSignedIn(User) && User.IsInRole("Investor"))
                {
                    <a asp-controller="Investor" asp-action="BillingInfo" class="nav-link mb-auto  active">
                        <i class="far fa-file-alt"></i> Billing
                        Info
                    </a>
                }
            </div>
        </div>


        <div class="col-md-9">
            <h3 class="py-lg-4 PayDetails">Payment Details</h3>
            <div class="container content clear-fix justify-content-between">

                <!-- <h2 class="mt-5 mb-5">Billing Info Settings</h2> -->
                <div class="row w-50 p-3 visaCard" style="border-radius: 32px;">
                    <div class="col-md-12">
                        <form action="" class="w-100">

                            <div class="input_div">
                                <div class="input_text _input CardNumberDetails">

                                    <input type="number" id="CardNumber" placeholder="0000 0000 0000 0000" data-slots="0"
                                           data-accept="\d" size="19" maxlength="16"> <span>Card Details</span>
                                    <i class="fa-brands fa-cc-visa" style="color: #d6a800;"></i>

                                </div>
                                <div class="cvv_month">
                                    <div class="input_text ">
                                        <input class="months" type="text" placeholder="mm/yyyy" data-slots="my">
                                    </div>
                                    <div class="input_text ">
                                        <input class="cvcs" type="text" placeholder="000" data-slots="0"
                                               data-accept="\d" size="3">
                                    </div>
                                </div>
                            </div>


                            <div class="input_text">
                                <input type="text" placeholder="Luk">
                                <span>
                                    Cardholder
                                    Name
                                </span>
                            </div>


                            <div class="billing mt-2">
                                <input type="radio" name="" id="">

                                <div class="input_text ">
                                    <span>Billing Address</span> <select>
                                        <option>Select Country</option>
                                        <option>China</option>
                                        <option>Thailand</option>
                                        <option>India</option>
                                        <option>Russia</option>
                                        <option>Japan</option>
                                        <option>Vatican City</option>
                                    </select>
                                </div>
                                <div class="zip_state my-2">
                                    <input type="number" placeholder="ZIP"> <input type="text" placeholder="State">
                                </div>
                                <div class="input_text"> <input type="text"> <span>Email address</span> </div>


                            </div>

                            <div class="pay ">
                                <button class="mt-3">Rragistered Card</button>
                                <div class="payemnts">
                                    <i class="fa fa-lock"></i>
                                    <p>Payments are secure and encripted.</p>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>


                <div class="row w-50 p-3 VodafonCash" style="border-radius: 32px;">
                    <div class="col-md-12">
                        <h3 class="py-lg-4 PayDetails opacity-0">Payment Details</h3>
                        <div class="vf">
                            <div class="ImgVf d-flex justify-content-center translate-middle-y ">
                                <img src="../Image/png.png" alt="">
                            </div>
                            <div class="input_text _input ">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <input type="number" placeholder="+2 0000 000 0000" data-slots="0"
                                               data-accept="\d" size="19" maxlength="11"> <span>Number Details</span>
                                    </div>

                                    <div class="d-flex align-items-center">
                                        <h6>To</h6>
                                    </div>

                                    <div class="position-relative">
                                        <input type="number" placeholder="+2 0000 000 0000" data-slots="0"
                                               data-accept="\d" size="19" maxlength="11"> <span>Client Number</span>
                                    </div>
                                </div>



                                <div class="pay AddNumbers">
                                    <button>Transfer </button>
                                    <div class="payemnts position-relative">
                                        <i class="fa fa-lock top-0 start-0 LockVF"></i>
                                        <p>Payments are secure and encripted.</p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section js
{
    <script src="~/assets/js/setting.js"></script>
    <script src="~/assets/js/payment.js"></script>
}
