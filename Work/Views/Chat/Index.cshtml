@inject Work.BL.Interface.IUserRep UserRep;
@{
    ViewData["Title"] = "Chat Page";
    //var UsersList = ViewBag.UsersList;
    //var UserName = ViewBag.User;
}

<div class="container">

    <div class="row">
        <div class="col-2">Start Chat</div>
        <ul>
            @foreach (var item in UserRep.Get())
            {
                <li>
                    <div class="row">
                        <p value="@item.Email">@item.UserName</p>
                        <a class="btn btn-success" asp-controller="Chat" asp-action="Create" asp-route-RecieverEmail="@item.Email"><b>Chat</b></a>
                    </div>
                </li>
            }
        </ul>
    </div>
<div>
    @section js

    {
        <script src="~/lib/jquery/dist/jquery.js"></script>
    }
